<h1><u>Administrative Controls</u></h1>


<h1> Update Control's message to players: </h1>

<%= form_for @game, url: alert_update_path do |f| %>
 <div class="actions">
    <%= f.label "Update Message" %> </br>
    <%= f.text_field :control_message, :size => "60x5"%></br>
    <%= f.submit %>
  </div>
<% end %>

<%= form_for @game do |f| %>
 <div class="actions">
    <%= f.label "Rioters" %> </br>
    <%= f.number_field :rioters, :in => 0..12, :step => '1'%></br>
    <%= f.submit %>
  </div>
<% end %>

<h1>Pause/Unpause Game:
<%= link_to toggle_game_status_path, method: :post, class: "btn btn-default" do %>
  <% if @game.paused %>
    <i class="glyphicon glyphicon-play"></i>
  <% else %>
    <i class="glyphicon glyphicon-pause"></i>
  <% end %>
<% end %>
</h1>
<h2>Game is currently 
    <% if @game.paused %>
    paused.
  <% else %>
    unpaused.
  <% end %>
</h2>

<div class="light well">
   
   <h2>Warning: this wipes <em>all</em> the data.</h2>
   <h3>It will also take a little bit of time to run.</h3>
    <%= form_tag reset_game_path, :method => 'post' do %>
      <%= submit_tag "Reset Game" %>
    <% end %>
</div>


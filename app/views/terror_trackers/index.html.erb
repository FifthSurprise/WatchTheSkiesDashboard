<h1>Listing Terror Tracker Entry</h1>

 <div class="table-responsive"> 
    <table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th >Round</th>
      <th >Amount</th>
      <th >Description</th>
      <th >Details</th>
      <th >Edit</th>
      <th >Destroy</th>
    </tr>
  </thead>

  <tbody>
    <% @terror_trackers.each_with_index do |terror_tracker, index| %>
      <tr>
        <td><%= index+1 %></td>
        <td><%= terror_tracker.round %></td>
        <td><%= terror_tracker.amount %></td>
        <td><%= terror_tracker.description %></td>
        <td><%= link_to 'Details', terror_tracker %></td>
        <td><%= link_to 'Edit', edit_terror_tracker_path(terror_tracker) %></td>
        <td><%= link_to 'Destroy', terror_tracker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

</br>
<%= link_to 'New Terror Tracker Entry', new_terror_tracker_path %>

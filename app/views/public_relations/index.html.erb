<h1>Listing Public Relations</h1>

<%= link_to 'New PR Entry', new_public_relation_path %>
<h2>PR by Country</h2>
<div class="btn-group" role="group">
  <% @countries.each do |country|%>
  <%= link_to country, country_pr_status_path(country), class: "btn btn-default" %>
  <% end %>
</div>

<h2>Total PR Changes</h2>
<table class="table">
  <thead>
    <tr>
      <th >Round</th>
      <th >Details</th>
      <th >Edit</th>
      <th >Destroy</th>
      <th >Country</th>
      <th >Amount</th>
      <th >Description</th>
    </tr>
  </thead>

  <tbody>
    <% @public_relations.each do |public_relation| %>
      <tr>
        <td><%= public_relation.round %></td>
        <td><%= link_to 'Details', public_relation %></td>
        <td><%= link_to 'Edit', edit_public_relation_path(public_relation) %></td>
        <td><%= link_to 'Destroy', public_relation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to public_relation.country, country_pr_status_path( public_relation.country) %></td>
        <td><%= public_relation.pr_amount %></td>
        <td><%= public_relation.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


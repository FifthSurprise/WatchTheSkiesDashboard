<h1>Listing PRs</h1>
<h2> Country: <%= @country %></h2>
<%= link_to 'New Public Relation Entry', new_public_relation_path(:country=> @country) %>

<h1> PR Amounts by Round </h1>
<table class="table">
  <thead>
    <tr>
      <th >Round</th>
      <th >Total PR Change</th>
    </tr>
  </thead>

  <tbody>
    <% @pr_amounts.each do |pr_amount| %>
      <tr>
        <td><%= pr_amount[0] %></td>
        <td><%= pr_amount[1] %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<h2>PR by Country</h2>
<div class="btn-group" role="group">
  <% @countries.each do |country|%>
  <%= link_to country, country_pr_status_path(country), class: "btn btn-default" %>
  <% end %>
</div>

<h2>Listing Public Relations for <%= @country %></h2>
<table class="table">
  <thead>
    <tr>
      <th >Round</th>
      <th >Show</th>
      <th >Edit</th>
      <th >Destroy</th>
      <th >Country</th>
      <th >Amount</th>
      <th >Description</th>
    </tr>
  </thead>

  <tbody>
    <% @public_relations.each do |public_relation| %>
      <tr>
        <td><%= public_relation.round %></td>
        <td><%= link_to 'Show', public_relation %></td>
        <td><%= link_to 'Edit', edit_public_relation_path(public_relation) %></td>
        <td><%= link_to 'Destroy', public_relation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to public_relation.country, country_pr_status_path( public_relation.country) %></td>
        <td><%= public_relation.pr_amount %></td>
        <td><%= public_relation.description %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

